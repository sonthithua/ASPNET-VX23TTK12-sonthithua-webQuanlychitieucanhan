@{
    bool isAuthPage = ViewBag.Title == "Đăng nhập" || ViewBag.Title == "Đăng ký";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Quản lý thu chi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fa;
        }

        /* Sidebar style */
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(to bottom, #1cc88a, #36b9cc);
            color: #fff;
            padding-top: 1rem;
        }

            .sidebar a {
                color: #fff;
                display: block;
                padding: 0.8rem 1rem;
                margin: 0.2rem 0;
                border-radius: 0.5rem;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: rgba(255,255,255,0.2);
                }

        /* Header */
        .header-bar {
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 0.8rem 1.5rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-left: auto;
        }

        .card-custom {
            border-radius: 1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        footer {
            text-align: center;
            padding: 1rem;
            margin-top: 2rem;
            color: #6c757d;
        }

        /* ✅ Canh giữa khi ở trang Login/Register */
        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    @if (!isAuthPage)
    {
        <!-- Giao diện chính -->
        <div class="d-flex">
            <!-- Sidebar -->
            <div class="sidebar p-3">
                <h3 class="text-center mb-4">Thu Chi</h3>
                <a href="@Url.Action("Index","Transaction")">Danh sách</a>
                <a href="@Url.Action("Create","Transaction")">Thêm giao dịch</a>
                <a href="@Url.Action("Report","Transaction")">Báo cáo</a>
            </div>

            <!-- Main Content -->
            <div class="flex-grow-1 p-4">
                <div class="header-bar">
                    <div class="user-info">
                        @if (Session["UserId"] != null)
                        {
                            <span>Xin chào, <b>@Session["Username"]</b>!</span>
                            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-sm">Đăng xuất</a>
                        }
                    </div>
                </div>

                <div class="card card-custom p-4">
                    @RenderBody()
                </div>

                <footer>
                    &copy; @DateTime.Now.Year Quản lý thu chi. All rights reserved.
                </footer>
            </div>
        </div>
    }
    else
    {
        <!-- Giao diện đăng nhập / đăng ký -->
        <div class="auth-container">
            <div class="card card-custom p-4" style="width: 400px;">
                @RenderBody()
            </div>
        </div>
    }
</body>
</html>
