@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


<div class="container mt-4" style="max-width: 400px;">
    <h3 class="text-center mb-4">Đăng nhập</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            @Html.Password("Password", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
        </div>

        <button type="submit" class="btn btn-success w-100">Đăng nhập</button>
        <p class="text-center mt-3">
            Chưa có tài khoản?
            <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
        </p>
        <p class="text-center mt-3">
            <a href="@Url.Action("ForgotPassword", "Account")">Quên mật khẩu?</a>
        </p>

    }
</div>
