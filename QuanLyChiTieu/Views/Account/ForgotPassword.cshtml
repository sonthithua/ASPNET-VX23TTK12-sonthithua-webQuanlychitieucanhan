@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4" style="max-width: 400px;">
    <h3 class="text-center mb-4">Quên mật khẩu</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu mới</label>
            @Html.Password("newPassword", null, new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
        </div>

        <div class="mb-3">
            <label class="form-label">Xác nhận mật khẩu</label>
            @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
        </div>

        <button type="submit" class="btn btn-success w-100">Đặt lại mật khẩu</button>

        <p class="text-center mt-3">
            <a href="@Url.Action("Login", "Account")">← Quay lại đăng nhập</a>
        </p>
    }
</div>
