@model QuanLyThuChi.Models.Transaction
@{
    ViewBag.Title = "Thêm giao dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white fw-bold py-3">
            <i class="bi bi-plus-circle"></i> Thêm giao dịch mới
        </div>

        <div class="card-body p-4">
            @using (Html.BeginForm("Create", "Transaction", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Ẩn UserId (lấy từ Session) -->
                @Html.HiddenFor(m => m.UserId)

                <div class="mb-3">
                    @Html.LabelFor(m => m.CategoryId, "Danh mục", new { @class = "form-label fw-semibold" })
                    @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.Categories, "Chọn danh mục", new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Type, "Loại giao dịch", new { @class = "form-label fw-semibold" })
                    @Html.DropDownListFor(m => m.Type,
                        new SelectList(new[] { "Thu", "Chi" }),
                        "Chọn loại",
                        new { @class = "form-select" })
                    @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Amount, "Số tiền", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Nhập số tiền..." })
                    @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Note, "Ghi chú", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Note, new { @class = "form-control", placeholder = "Ví dụ: Tiền ăn sáng, tiền điện..." })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.TransactionDate, "Ngày giao dịch", new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.TransactionDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a href="@Url.Action("Index", "Transaction")" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
